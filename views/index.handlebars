<div class="container">
    <div class="row">
        <div class="col-md-12 offset-md-6 centertext">
            <input class="new-item form-control" placeholder="Add a book" type="text" />
            <button type="submit" class="btn btn-success">Add Book</button>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="books-to-read">
                {{#each books}}
                <li>
                    {{book_title}}
                </li>
                {{/each}}
            </div>
        </div>
        <div class="col-md-6 offset-md-3">
            <div class="books-already-read">
                <!-- empty -->
            </div>
        </div>
    </div>
</div>

<script src="../public/js/view.js" type="text/javascript"></script>